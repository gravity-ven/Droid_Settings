    <script>
        // Update server time
        function updateTime() {
            const now = new Date();
            document.getElementById('serverTime').textContent = now.toLocaleString('en-US', {
                dateStyle: 'medium',
                timeStyle: 'medium'
            });
        }
        updateTime();
        setInterval(updateTime, 1000);
    </script>
