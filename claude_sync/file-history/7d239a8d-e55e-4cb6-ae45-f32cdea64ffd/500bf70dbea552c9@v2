    <script>
        const MACRO_API = 'http://localhost:9002/api/macro/regime/latest';
        const BAROMETERS_API = 'http://localhost:9001/api/barometers/latest';

        async function loadData() {
            try {
                document.getElementById('loading').style.display = 'block';
                document.getElementById('content').style.display = 'none';
                document.getElementById('error').style.display = 'none';

                // Fetch real data from APIs
                const [macroResponse, barometersResponse] = await Promise.all([
                    fetch(MACRO_API),
                    fetch(BAROMETERS_API)
                ]);

                if (!macroResponse.ok || !barometersResponse.ok) {
                    throw new Error('API not responding');
                }

                const macroData = await macroResponse.json();
                const barometersData = await barometersResponse.json();

                // Display regime
                const regime = determineRegime(macroData);
                document.getElementById('current-regime').textContent = regime;
                document.getElementById('composite-score').textContent = macroData.composite_score;

                // Generate symbols analysis based on real data
                const symbols = generateSymbolsAnalysis(macroData, barometersData);
                renderSymbolsTable(symbols);

                // Timestamp
                document.getElementById('timestamp').textContent = new Date().toLocaleString();

                // Show content
                document.getElementById('loading').style.display = 'none';
                document.getElementById('content').style.display = 'block';

            } catch (error) {
                console.error('Error:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('error').style.display = 'block';
                document.getElementById('error').textContent =
                    `‚ö†Ô∏è Error loading data: ${error.message}. Ensure Macro Regime Tracker (9002) and Barometers API (9001) are running.`;
            }
        }

        function determineRegime(macroData) {
            const growth = macroData.growth.regime;
            const inflation = macroData.inflation.regime;
            const liquidity = macroData.liquidity.regime;

            if (growth === 'EXPANSION' && inflation === 'TARGET') return 'GOLDILOCKS';
            if (growth === 'EXPANSION' && inflation === 'ELEVATED') return 'REFLATION';
            if (growth === 'SLOWDOWN' && inflation === 'LOW') return 'DEFLATION';
            if (growth === 'SLOWDOWN' && inflation === 'ELEVATED') return 'STAGFLATION';

            return `${growth} / ${inflation} / ${liquidity}`;
        }

        function generateSymbolsAnalysis(macroData, barometersData) {
            const regime = macroData.growth.regime;
            const inflationRegime = macroData.inflation.regime;
            const liquidityRegime = macroData.liquidity.regime;
            const compositeScore = macroData.composite_score;

            // REAL DATA-DRIVEN ANALYSIS
            const symbols = [];

            // Based on macro regime - these recommendations come from actual economic theory
            if (regime === 'EXPANSION') {
                // Expansion: Buy risk assets
                symbols.push({
                    symbol: 'SPY',
                    type: 'Equity ETF',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: `Economic expansion regime. Strong GDP growth (${macroData.growth.indicators.gdp_growth.toFixed(2)}%). Favor equities.`
                });

                symbols.push({
                    symbol: 'QQQ',
                    type: 'Tech ETF',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: 'Growth regime favors technology sector. Strong corporate earnings expected.'
                });
            } else if (regime === 'SLOWDOWN') {
                // Slowdown: Defensive positioning
                symbols.push({
                    symbol: 'SPY',
                    type: 'Equity ETF',
                    week2: 'HOLD',
                    month3: 'HOLD',
                    month6: 'SELL',
                    month18: 'SELL',
                    month36: 'HOLD',
                    rationale: 'Economic slowdown. Reduce equity exposure, favor quality and defensives.'
                });

                symbols.push({
                    symbol: 'TLT',
                    type: 'Long-Term Bonds',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: 'Flight to safety in slowdown. Long bonds benefit from falling yields.'
                });
            }

            // Inflation-based recommendations
            if (inflationRegime === 'ELEVATED') {
                symbols.push({
                    symbol: 'GLD',
                    type: 'Gold',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'BUY',
                    rationale: `Elevated inflation (${macroData.inflation.value.toFixed(2)}%). Gold at $${macroData.market.indicators.gold_price.toFixed(0)} - inflation hedge.`
                });

                symbols.push({
                    symbol: 'DBC',
                    type: 'Commodities ETF',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'HOLD',
                    month36: 'HOLD',
                    rationale: 'Commodities outperform in reflationary environment.'
                });

                symbols.push({
                    symbol: 'TIP',
                    type: 'TIPS',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: 'Treasury Inflation-Protected Securities for inflation protection.'
                });
            } else if (inflationRegime === 'LOW') {
                symbols.push({
                    symbol: 'TLT',
                    type: 'Long-Term Bonds',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: 'Low inflation supports long-duration bonds.'
                });
            }

            // Liquidity-based recommendations
            if (liquidityRegime === 'EASING') {
                symbols.push({
                    symbol: 'IWM',
                    type: 'Small Cap ETF',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: `Liquidity easing (Net Liquidity: $${(macroData.liquidity.net_liquidity/1000).toFixed(1)}T). Small caps benefit.`
                });
            } else if (liquidityRegime === 'TIGHTENING') {
                symbols.push({
                    symbol: 'UUP',
                    type: 'US Dollar',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'HOLD',
                    month36: 'HOLD',
                    rationale: 'Liquidity tightening strengthens dollar.'
                });
            }

            // VIX-based tactical
            const vix = macroData.market.indicators.vix;
            if (vix > 25) {
                symbols.push({
                    symbol: 'UVXY',
                    type: 'Volatility ETF',
                    week2: 'BUY',
                    month3: 'SELL',
                    month6: 'SELL',
                    month18: 'SELL',
                    month36: 'SELL',
                    rationale: `VIX at ${vix.toFixed(1)} - elevated volatility. Short-term hedge only.`
                });
            }

            // Credit spreads analysis
            const hySpread = macroData.market.indicators.credit_spread_hy;
            if (hySpread > 4.0) {
                symbols.push({
                    symbol: 'HYG',
                    type: 'High Yield Bonds',
                    week2: 'SELL',
                    month3: 'SELL',
                    month6: 'HOLD',
                    month18: 'BUY',
                    month36: 'BUY',
                    rationale: `HY spreads widening (${hySpread}%). Avoid near-term, buy dips long-term.`
                });
            } else if (hySpread < 3.5) {
                symbols.push({
                    symbol: 'HYG',
                    type: 'High Yield Bonds',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'HOLD',
                    month36: 'SELL',
                    rationale: `HY spreads tight (${hySpread}%). Carry trade attractive near-term.`
                });
            }

            // Dollar strength
            const dxy = macroData.market.indicators.dollar_index;
            if (dxy > 105) {
                symbols.push({
                    symbol: 'EEM',
                    type: 'Emerging Markets',
                    week2: 'SELL',
                    month3: 'SELL',
                    month6: 'HOLD',
                    month18: 'BUY',
                    month36: 'BUY',
                    rationale: `Strong dollar (DXY ${dxy.toFixed(1)}) pressures EM. Wait for weakness.`
                });
            } else if (dxy < 95) {
                symbols.push({
                    symbol: 'EEM',
                    type: 'Emerging Markets',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: `Weak dollar (DXY ${dxy.toFixed(1)}) benefits EM assets.`
                });
            }

            // Crypto based on risk environment
            if (compositeScore > 70 && liquidityRegime === 'EASING') {
                symbols.push({
                    symbol: 'BTC',
                    type: 'Bitcoin',
                    week2: 'HOLD',
                    month3: 'BUY',
                    month6: 'BUY',
                    month18: 'BUY',
                    month36: 'HOLD',
                    rationale: 'Risk-on environment with liquidity easing favors crypto.'
                });
            } else if (compositeScore < 50) {
                symbols.push({
                    symbol: 'BTC',
                    type: 'Bitcoin',
                    week2: 'SELL',
                    month3: 'SELL',
                    month6: 'HOLD',
                    month18: 'BUY',
                    month36: 'BUY',
                    rationale: 'Risk-off environment. Avoid crypto near-term, accumulate on dips.'
                });
            }

            // Always include defensive assets
            symbols.push({
                symbol: 'SHY',
                type: 'Short-Term Treasuries',
                week2: 'HOLD',
                month3: 'HOLD',
                month6: compositeScore < 50 ? 'BUY' : 'HOLD',
                month18: 'HOLD',
                month36: 'HOLD',
                rationale: 'Cash alternative. Safety in uncertain times.'
            });

            return symbols;
        }

        function renderSymbolsTable(symbols) {
            const tbody = document.getElementById('symbols-tbody');
            tbody.innerHTML = '';

            symbols.forEach(symbol => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="symbol-name">${symbol.symbol}</td>
                    <td class="asset-type">${symbol.type}</td>
                    <td><span class="${symbol.week2.toLowerCase()}">${symbol.week2}</span></td>
                    <td><span class="${symbol.month3.toLowerCase()}">${symbol.month3}</span></td>
                    <td><span class="${symbol.month6.toLowerCase()}">${symbol.month6}</span></td>
                    <td><span class="${symbol.month18.toLowerCase()}">${symbol.month18}</span></td>
                    <td><span class="${symbol.month36.toLowerCase()}">${symbol.month36}</span></td>
                    <td class="rationale">${symbol.rationale}</td>
                `;
                tbody.appendChild(row);
            });
        }

        // Load data on page load
        loadData();

        // Auto-refresh every 5 minutes
        setInterval(loadData, 5 * 60 * 1000);
    </script>
