        function renderCompositeScore(score, growth, inflation, liquidity, market) {
            const scoreElement = document.getElementById('composite-score-value');
            const descElement = document.getElementById('score-description');

            scoreElement.textContent = score;

            // Set color and description
            if (score >= 85) {
                scoreElement.className = 'score-value score-green';
                descElement.innerHTML = '<strong>üü¢ STRONG MARKET CONDITIONS</strong><br>All systems go. Healthy across growth, inflation, liquidity, and markets.';
            } else if (score >= 70) {
                scoreElement.className = 'score-value score-green';
                descElement.innerHTML = '<strong>üü¢ GOOD CONDITIONS (REFLATION)</strong><br>Strong growth with elevated inflation. Favor real assets, commodities, value stocks.';
            } else if (score >= 50) {
                scoreElement.className = 'score-value score-yellow';
                descElement.innerHTML = '<strong>üü° MODERATE CONDITIONS</strong><br>Mixed signals across macro regimes. Stay selective and balanced.';
            } else if (score >= 25) {
                scoreElement.className = 'score-value score-red';
                descElement.innerHTML = '<strong>üî¥ CAUTION</strong><br>Multiple headwinds present. Reduce risk exposure and focus on quality.';
            } else {
                scoreElement.className = 'score-value score-red';
                descElement.innerHTML = '<strong>‚ö†Ô∏è CRISIS MODE</strong><br>Severe conditions. Maximum defensive positioning required.';
            }

            // Score breakdown
            document.getElementById('growth-score').textContent = getComponentScore(growth.regime, 'growth') + '/30';
            document.getElementById('inflation-score').textContent = getComponentScore(inflation.regime, 'inflation') + '/30';
            document.getElementById('liquidity-score').textContent = getComponentScore(liquidity.regime, 'liquidity') + '/20';
            document.getElementById('market-score').textContent = getComponentScore(market.regime, 'market') + '/20';
        }

        function getComponentScore(regime, type) {
            if (type === 'growth') {
                if (regime === 'EXPANSION') return 30;
                if (regime === 'RECOVERY') return 20;
                if (regime === 'SLOWDOWN') return 10;
                return 0;
            } else if (type === 'inflation') {
                if (regime === 'TARGET') return 30;
                if (regime === 'LOW') return 20;
                if (regime === 'ELEVATED') return 10;
                return 0;
            } else if (type === 'liquidity') {
                if (regime === 'EASING') return 20;
                if (regime === 'NEUTRAL') return 10;
                return 0;
            } else if (type === 'market') {
                if (regime === 'RISK_ON') return 20;
                if (regime === 'NEUTRAL') return 10;
                return 0;
            }
            return 0;
        }

        function renderCapitalFlows(data) {
            const flows = getCapitalFlows(
                data.growth.regime,
                data.inflation.regime,
                data.liquidity.regime,
                data.market.regime
            );

            // Regime name
            const dominantRegime = Object.entries(data.regime_probabilities)
                .sort((a, b) => b[1] - a[1])[0];

            document.getElementById('regime-name').textContent = dominantRegime[0];
            document.getElementById('regime-name').className = 'regime-indicator regime-reflation';

            document.getElementById('regime-description').innerHTML =
                `<strong>Probability: ${dominantRegime[1].toFixed(1)}%</strong><br>` +
                `Growth: ${data.growth.regime} | Inflation: ${data.inflation.regime} | ` +
                `Liquidity: ${data.liquidity.regime} | Market: ${data.market.regime}`;

            // Outflows
            let outflowsHTML = '';
            flows.outflows.forEach(flow => {
                outflowsHTML += `
                    <div class="flow-item">
                        <span class="flow-from">${flow.from}</span>
                        <span class="flow-arrow">‚Üí</span>
                        <span class="flow-to">${flow.to}</span>
                    </div>
                    <div style="color: var(--text-secondary); font-size: 0.9em; margin: 5px 0 15px 15px;">
                        ${flow.reason}
                    </div>
                `;
            });
            document.getElementById('outflows-content').innerHTML = outflowsHTML;

            // Inflows
            let inflowsHTML = '';
            flows.inflows.forEach(flow => {
                inflowsHTML += `
                    <div class="flow-item">
                        <span class="flow-from">${flow.from}</span>
                        <span class="flow-arrow">‚Üí</span>
                        <span class="flow-to">${flow.to}</span>
                    </div>
                    <div style="color: var(--text-secondary); font-size: 0.9em; margin: 5px 0 15px 15px;">
                        ${flow.reason}
                    </div>
                `;
            });
            document.getElementById('inflows-content').innerHTML = inflowsHTML;

            // Strategy
            document.getElementById('strategy-content').textContent = flows.strategy;

            // GEOGRAPHIC FLOWS - Get and render
            const geoFlows = getGeographicFlows(
                data.growth.regime,
                data.inflation.regime,
                data.liquidity.regime,
                data.market.regime
            );

            // Geographic Outflows
            let geoOutflowsHTML = '';
            geoFlows.outflows.forEach(flow => {
                geoOutflowsHTML += `
                    <div class="flow-item">
                        <span class="flow-from" style="font-weight: 600;">${flow.country}</span>
                        <div style="color: var(--text-secondary); font-size: 0.85em; margin: 2px 0 0 0;">
                            üìç ${flow.region}
                        </div>
                    </div>
                    <div style="color: var(--text-secondary); font-size: 0.9em; margin: 5px 0 15px 15px;">
                        ${flow.reason}
                    </div>
                `;
            });
            document.getElementById('geo-outflows-content').innerHTML = geoOutflowsHTML;

            // Geographic Inflows
            let geoInflowsHTML = '';
            geoFlows.inflows.forEach(flow => {
                geoInflowsHTML += `
                    <div class="flow-item">
                        <span class="flow-to" style="font-weight: 600;">${flow.country}</span>
                        <div style="color: var(--text-secondary); font-size: 0.85em; margin: 2px 0 0 0;">
                            üìç ${flow.region}
                        </div>
                    </div>
                    <div style="color: var(--text-secondary); font-size: 0.9em; margin: 5px 0 15px 15px;">
                        ${flow.reason}
                    </div>
                `;
            });
            document.getElementById('geo-inflows-content').innerHTML = geoInflowsHTML;

            // Regional Summary
            document.getElementById('regional-summary-content').innerHTML = geoFlows.regionalSummary;
        }

