            }
            // GOLDILOCKS: Growth + Target Inflation
            else if (growthRegime === 'EXPANSION' && inflationRegime === 'TARGET') {
                geoFlows.outflows = [
                    { country: 'Gold-focused economies', region: 'Global', reason: 'No inflation fear, risk-on environment' },
